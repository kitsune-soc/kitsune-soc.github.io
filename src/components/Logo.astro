---
import logoRef from '../assets/logo.svg';
---

<div class="logo-container">
    <svg class="logo">
        <use {...{ 'xlink:href': `${logoRef}#logo` }}></use>
    </svg>
    <i class="slogan"> ActivityPub-federated microblogging</i>
</div>

<style lang="scss">
    @use '../styles/colours' as *;

    .logo-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 2em;

        & .logo {
            width: 400px;
            max-width: 100%;
            color: $shade2light;
            filter: drop-shadow(0 0 5px $shade2light);
        }

        & .slogan {
            opacity: 0.5;
        }
    }
</style>
